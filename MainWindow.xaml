<Window x:Class="_313616_PickDrawing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_313616_PickDrawing"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Closed="Window_Closed">
    <StackPanel DockPanel.Dock="Bottom">
        <Canvas DockPanel.Dock="Top" x:Name="canvas" Height="400"/>
        <RadioButton x:Name="rbRec" GroupName="Shape" Checked="rbRec_Checked" Content="Rectangle"/>
        <RadioButton x:Name="rbEli" GroupName="Shape" Checked="rbEli_Checked" Content="Elipse"/>
        <Button x:Name="setColour" Click="setColour_Click" Content="Set Colour"/>
        <TextBox x:Name="txtInput" Text="10,10,10,10"/>
        <Button x:Name="btnDraw" Click="btnDraw_Click" Content="Draw"/>
    </StackPanel>
</Window>
